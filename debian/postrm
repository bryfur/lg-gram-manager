#!/bin/bash
set -e

if [ "$1" = "purge" ]; then
    # Remove lg-gram group if it exists and has no members
    if getent group lg-gram > /dev/null 2>&1; then
        groupdel lg-gram 2>/dev/null || true
    fi
fi

# Reload udev rules
if command -v udevadm > /dev/null 2>&1; then
    udevadm control --reload-rules 2>/dev/null || true
fi

#DEBHELPER#

exit 0
